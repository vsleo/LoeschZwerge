<header>
  <div class="headline">
    <a href="/LoeschZwerge/">
      <img src={`images/Loeschzwerge_Logo_lightblue.svg`} alt="Logo" /></a
    >
  </div>
  <div class="nav">
    <nav>
      <a href="/LoeschZwerge/car">Feuerwehrauto</a>
      <a href="/LoeschZwerge/test">test</a>
    </nav>
  </div>
  <div class="schlauch"><img src="images/Feuerwehrschlauch_mitte.svg" /></div>
</header>

<style>
  /* Grundlegendes Reset & Body */
  body {
    margin: 0;
    background: #f9f4f4;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    color: #4a3c3c;
  }

  /* Header Styling */
  header {
    position: relative;
    background: #f7a8a8;
    background: linear-gradient(to bottom, #f7a8a8, #f1baba);
    box-shadow: 0 4px 12px rgba(247, 168, 168, 0.4);
    overflow: visible;
    display: flex;
    justify-content: center; /* Zentriert .center */
    align-items: center; /* Vertikal zentriert (optional) */
    height: 7vw;
  }

  /* Logo links oben fixieren */
  .headline {
    margin: 0;
    position: absolute;
    top: 2vw;
    left: 4vw;
  }

  .headline img {
    height: 64px;
    filter: drop-shadow(1px 1px 1px rgba(0, 0, 0, 0.1));
    image-rendering: crisp-edges;
    z-index: 1;
  }

  nav {
    position: absolute;
    bottom: 15%; /* Positioniert die Navigation 80% vom oberen Rand */

    transform: translateX(-50%); /* Zentriert die Navigation */
    /* Vertikal zentriert (optional) */
  }

  /* Navigation rechts daneben */
  .nav nav {
    gap: 24px;
    font-weight: 600;
    font-size: 1.1rem;
  }

  /* Navigation Links */
  .nav a {
    color: #6b4747;
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 6px;
    background: #ffe1e1;
    box-shadow: 2px 2px 0 #d97d7d;
    transition: all 0.2s ease;
  }

  /* Hover Effekt */
  .nav a:hover {
    background: #fa9751;
    color: #fff;
    box-shadow: 3px 3px 0 #af4a01;
    transform: translate(-1px, -1px);
  }

  .schlauch {
    display: grid;
    float: left;
  }
</style>
